{
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish",
      "npmClient": "npm",
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "test/**"
      ]
    }
  },
  "packages": [
    "packages/*"
  ],
  "npmClientArgs": [
    "--no-lockfile"
  ]
}
