{
  "compilerOptions": {
    "baseUrl": ".",
    /* 模块解析策略,Node or Classic */
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "lib": ["DOM", "ES2016"],
    "locale": "zh-cn"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
